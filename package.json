{
  "name": "pet-connect",
  "private": true,
  "version": "1.0.0",
  "description": "A platform to connect pet shelters with potential adopters and sponsors",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "netlify dev",
    "dev:vite": "vite --port 5173",
    "dev:server": "tsx src/server/index.ts",
    "dev:all": "concurrently \"npm run dev:vite\" \"npm run dev:server\"",
    "build": "npm run type-check && tsc && vite build",
    "build:vite": "npm run type-check && tsc && vite build",
    "build:functions": "netlify functions:build",
    "type-check": "tsc --noEmit --pretty --listFiles",
    "type-check:strict": "tsc --noEmit --pretty --listFiles --strict",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "tsx src/server/index.ts",
    "upload-data": "tsx src/scripts/uploadJsonToDb.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "seed:shelters": "tsx scripts/seedShelters.ts",
    "list:shelters": "tsx scripts/listShelters.ts",
    "postinstall": "husky",
    "pre-deploy": "npm run lint"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit --pretty",
      "eslint --fix"
    ],
    "*.{js,jsx}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "pets",
    "adoption",
    "shelter",
    "sponsorship"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@mercadopago/sdk-react": "^1.0.2",
    "@netlify/functions": "^3.1.3",
    "@radix-ui/react-checkbox": "^1.3.0",
    "@radix-ui/react-label": "^2.1.5",
    "@radix-ui/react-select": "^2.2.3",
    "@react-google-maps/api": "^2.20.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jwt-decode": "^2.2.1",
    "@types/mercadopago": "^1.5.11",
    "@types/node-fetch": "^2.6.12",
    "@types/nodemailer": "^6.4.17",
    "@types/react-bootstrap": "^0.32.37",
    "@types/react-router-dom": "^5.3.3",
    "bootstrap": "^5.3.5",
    "bootstrap-icons": "^1.11.3",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.488.0",
    "mercadopago": "^2.5.0",
    "mongodb": "^6.15.0",
    "mongoose": "^8.2.0",
    "nodemailer": "^7.0.2",
    "react": "^19.0.0",
    "react-bootstrap": "^2.10.9",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.2",
    "react-lazy-load-image-component": "^1.6.3",
    "react-router-dom": "^7.5.1",
    "recharts": "^2.15.3",
    "swiper": "^11.2.6",
    "tailwind-merge": "^3.2.0",
    "typescript": "^5.3.3",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.17.46",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "mongodb-memory-server": "^9.5.0",
    "netlify-cli": "^21.2.1",
    "terser": "^5.39.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vitest": "^3.1.3"
  }
}
